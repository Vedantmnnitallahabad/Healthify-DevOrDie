<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Appointments Here</title>
    <link rel="stylesheet" href="/a.css">
    <style>
      a{
        text-decoration: none;
      }
    </style>
</head>
<body>



  <h1 align="center">VIEW APPOINTMENTS HERE!!!</h1><br>


    <%if(appointment.length>0){%>

        <div class="doc-repeat">
            <%appointment.forEach(doctor=>{ %>
             <%if(doctor.status!=="REJECTED"){%>
                <div class="doctor-card">
                  <div class="doctor-info">
      
               
                    DATE OF APPOINTMENT:<p class="doctor-experience"><%=doctor.date%></p>
                   TIME OF APPOINTMENT: <p class="doctor-qualifications"><%=doctor.time%></p><br>
                    <a class="book-appointment-btn" href="/findpat/<%=doctor.pat_id%>">VIEW PATIENT DETAILS</a><br><br><br>
                    <button class="decl" data-doc="<%=doctor._id%>" >DECLINE</button><br><br><br>
                    <button  class="acc" data-doc="<%=doctor._id%>">ACCEPT</button>
                  </div>
          
                    
                </div>
             <%}%>
             
            <%})%>
          </div>
    
       
        <% } else{ %>
       <h1>NO APPOINTMENTS TO SHOW!!!</h1>
       <% }%>
        
       <script>
        const trashcan = document.querySelector('.decl');

        trashcan.addEventListener('click', (e) => {
          const endpoint = `/declappointment/${trashcan.dataset.doc}`;
    
          fetch(endpoint, {
            method: 'PUT',
          })
          .then(response => response.json())
          .then(data => window.location.href = data.redirect)
          .catch(err => console.log(err));
        });
        const trashcan2 = document.querySelector('.acc');

        trashcan2.addEventListener('click', (e) => {
          const endpoint = `/confappointment/${trashcan.dataset.doc}`;
    
          fetch(endpoint, {
            method: 'PUT',
          })
          .then(response => response.json())
          .then(data => window.location.href = data.redirect)
          .catch(err => console.log(err));
        });
       </script>
</body>
</html>